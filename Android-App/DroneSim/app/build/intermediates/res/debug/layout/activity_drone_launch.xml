<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dronesim.activity.LaunchDroneActivity" >
    
    <TextView
        android:id="@+id/speedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drone_speed"
        android:layout_below="@+id/launchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="144dp" />

    <Button
        android:id="@+id/launchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/launch_drone"
        android:layout_below="@+id/droneNameEdit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:layout_below="@+id/speedLabel"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/disableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/disable_drone"
        android:layout_below="@+id/tempText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/countrySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/countries"
        android:layout_below="@+id/countryLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/latitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drone_lat"
        android:layout_below="@+id/speedText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/latitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:layout_below="@+id/latitudeLabel"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/longitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drone_long"
        android:layout_below="@+id/latitudeText"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/longitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:layout_below="@+id/longitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature:"
        android:layout_below="@+id/longitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"
        android:layout_below="@+id/tempLabel"
        android:layout_alignLeft="@+id/droneNameLabel"
        android:layout_alignStart="@+id/droneNameLabel" />

    <TextView
        android:id="@+id/countryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Drone In:"
        android:layout_alignParentTop="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droneSpinner"
        android:focusable="false"
        android:layout_below="@+id/droneSpinnerLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Viewing data for:"
        android:id="@+id/droneSpinnerLabel"
        android:layout_below="@+id/launchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Drone Name:"
        android:id="@+id/droneNameLabel"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/countrySpinner"
        android:layout_alignRight="@+id/speedLabel"
        android:layout_alignEnd="@+id/speedLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/droneNameEdit"
        android:layout_alignBottom="@+id/droneNameLabel"
        android:layout_toRightOf="@+id/latitudeLabel"
        android:layout_alignRight="@+id/launchButton"
        android:layout_alignEnd="@+id/launchButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/errorText"
        android:layout_below="@+id/launchButton"
        android:layout_centerHorizontal="true"
        android:text="[Error Message]" />


</RelativeLayout><!-- From: file:/home/nathan/Desktop/New_IoT_Repo/Android/DroneSim/app/src/main/res/layout/activity_drone_launch.xml -->