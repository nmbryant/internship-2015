<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dronesim.activity.ResultsScreenActivity"
    android:background="#4C4C4C"
    android:id="@+id/resultsLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Use Case]"
        android:id="@+id/useCaseText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#CCCCCC"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/useCaseImage"
        android:src="@drawable/agriculture_key_image"
        android:paddingBottom="20dp"
        android:layout_above="@+id/launchAnotherButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Another Drone"
        android:id="@+id/launchAnotherButton"
        android:textSize="30dp"
        android:backgroundTint="#333333"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[Description]"
        android:id="@+id/descriptionText"
        android:layout_below="@+id/useCaseText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#CCCCCC"
        android:textSize="16dp" />
</RelativeLayout>
