<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/dweetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="48dp"
        android:text="Dweet Thing Name:" />

    <EditText
        android:id="@+id/dweetEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dweetLabel"
        android:layout_below="@+id/dweetLabel"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/hasKeyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dweetEditText"
        android:layout_below="@+id/dweetEditText"
        android:text="Has Key?" />

    <TextView
        android:id="@+id/keyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hasKeyCheckBox"
        android:layout_below="@+id/hasKeyCheckBox"
        android:layout_marginTop="18dp"
        android:text="Enter Key:"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/keyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/keyLabel"
        android:layout_below="@+id/keyLabel"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:visibility="invisible" />

    <Button
        android:id="@+id/chooseStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:text="Start" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chooseStartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Error Text"
        android:visibility="invisible" />

</RelativeLayout>
